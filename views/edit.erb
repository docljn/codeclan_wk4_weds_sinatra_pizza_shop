<form class ="" action="/pizzas/<%=@pizza.id%>" method="post">

  <h2>Your Pizza Order</h2>

  <label for="first-name-update">First Name: </label>
  <input id="first-name-update" type="text" name="first_name" value="<%= @pizza.first_name %>">

  <label for="last-name-update">Last Name: </label>
  <input id="last-name-update" type="text" name="last_name" value="<%= @pizza.last_name %>">

  <label for="topping-update">Topping: </label>
  <select id="topping-update" class="" name="topping">
    <option value="<%= @pizza.topping %>"><%= @pizza.topping() %> </option>
    <option value="Pepperoni">Pepperoni</option>
    <option value="Italian Sausage">Italian Sausage</option>
    <option value="Mushroom">Mushroom</option>
  </select>


  <label for="quantity-update">Quantity: </label>
  <input id="quantity-update" type="number" name="quantity" value="<%= @pizza.quantity %>">

  <input type="submit" name="" value="Save Changes">

</form>
