<!-- index.erb -->
<!-- can access @instance variables in controller -->

<h2>All Pizza Orders</h2>

<!-- loop through the array returned by .all() ie. logic not display, so no = in erb tags -->
<!-- = turns the contents into a string -->
<% @pizzas.each do |pizza|  %>

<!-- we have to separate the .map ruby function from the html into which we will be returning the results -->

<!-- the erb tags within the html then reference the variables set up in the initial/outer loop -->

  <p>
    Name: <%= pizza.pretty_name() %>
  </p>
  <p>
    Order: <%= pizza.quantity() %> x <%= pizza.topping %>
  </p>
  <p> <a href="/pizzas/<%= pizza.id %>">Order Details</a> </p>
  <!-- CARE: Although you are not displaying the pizza.id you are INJECTING IT into the HTML code, so you need < % = -->

  <hr/>


<% end %>
