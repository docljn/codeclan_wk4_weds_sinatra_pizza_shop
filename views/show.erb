<!-- show.erb -->

<h2>Selected Pizza Order</h2>
<table>
  <caption></caption>
  <thead>
    <tr>
      <th>First Name</th> <th>Last Name</th> <th>Topping</th> <th>Quantity</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @pizza.first_name %></td> <td><%= @pizza.last_name %></td> <td><%= @pizza.topping %></td> <td><%= @pizza.quantity %></td>
    </tr>
  </tbody>

</table>

<p>
  <form class="" action="/pizzas/<%= @pizza.id %>/delete" method="post">
    <input type="submit" name="" value="Delete Order">
  </form>
</p>

<p>
  <form class="" action="/pizzas/<%= @pizza.id %>/edit" method="get">
    <input class="bright" type="submit" name="" value="Edit Order">
  </form>
</p>
